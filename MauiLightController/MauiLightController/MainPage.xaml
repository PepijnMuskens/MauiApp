<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLightController.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button
                x:Name="ToggleLightsBtn"
                Text="Toggle Lights"
                Clicked="OnToggleLightsClicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="RotateBtn"
                Text="Rotate"
                Clicked="OnRotateClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
